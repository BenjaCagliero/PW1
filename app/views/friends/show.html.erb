<br/> <br/>
<div class="jumbotron"style="background-color: #e0cbf7;">
  <h1 class="display-4"><%= @friend.first_name %><%= @friend.last_name %></h1>
  <br/>
  <p class="lead"> <%= @friend.emails %></p>
  <hr class="my-4">
  <p> <%= @friend.phone %></p>
  <p> <%= @friend.twitter %></p>
  <div class="btn-group" role="group">
    <% if @friend.user == current_user %>
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%end%>
    <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  </div>
  <br/><br/>
  <% if @friend.user == current_user %>
    <div>
        <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-outline-danger btn-sm"%>
    </div>
  <%end%>
</div>
